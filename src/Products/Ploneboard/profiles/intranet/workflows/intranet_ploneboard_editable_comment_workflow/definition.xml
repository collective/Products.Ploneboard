<?xml version="1.0"?>
<dc-workflow workflow_id="intranet_ploneboard_comment_workflow"
             title="Intranet Comment Workflow [Ploneboard]"
             state_variable="review_state"
             initial_state="initial">
 <permission>Access contents information</permission>
 <permission>View</permission>
 <permission>Modify portal content</permission>
 <permission>Ploneboard: Add Comment</permission>
 <permission>Add portal content</permission>
 <permission>Delete objects</permission>

 <state state_id="initial" title="Being created">
  <exit-transition transition_id="submit"/>
  <exit-transition transition_id="autosubmit"/>
  <permission-map name="Access contents information"
                  acquired="True">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Comment"
                  acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>

 <state state_id="pending" title="Waiting for moderator">
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="autopublish"/>
  <permission-map name="Access contents information"
                  acquired="True">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Comment"
                  acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>

 <state state_id="internally_published" title="Public">
  <exit-transition transition_id="retract"/>
  <permission-map name="Access contents information"
                  acquired="True">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="True">
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Comment"
                  acquired="True">
  </permission-map>
  <permission-map name="View" acquired="True">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>

 <state state_id="rejected" title="Rejected">
  <exit-transition transition_id="submit"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Comment"
                  acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>

 <state state_id="retracted" title="Retracted">
  <exit-transition transition_id="re-publish"/>
  <permission-map name="Access contents information"
                  acquired="True">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Comment"
                  acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>


 <transition transition_id="autopublish"
             title="Automatic publishing in unmoderated boards"
             new_state="internally_published" trigger="AUTOMATIC"
             before_script=""
             after_script="autopublish_script">

  <guard>
   <guard-permission>Ploneboard: Approve Comment</guard-permission>
  </guard>
 </transition>

 <transition transition_id="autosubmit"
             title="Automatic publishing request"
             new_state="pending" trigger="AUTOMATIC"
             before_script="" after_script="">
  <action url="%(content_url)s/content_submit_form"
          category="workflow">Submit</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>

 <transition transition_id="publish"
             title="Reviewer publishes content"
             new_state="internally_published" trigger="USER"
             before_script="" after_script="publish_script">
  <action url="%(content_url)s/content_publish_form"
          category="workflow">Publish</action>
  <guard>
   <guard-permission>Ploneboard: Approve Comment</guard-permission>
  </guard>
 </transition>

 <transition transition_id="re-publish"
             title="Re-publish a retracted comment"
             new_state="internally_published" trigger="USER"
             before_script="" after_script="">
  <action url="" category="workflow">Publish</action>
  <guard>
   <guard-permission>Ploneboard: Retract Comment</guard-permission>
  </guard>
 </transition>

 <transition transition_id="reject"
             title="Reviewer rejects submission"
             new_state="rejected" trigger="USER"
             before_script="" after_script="reject_script">
  <action url="%(content_url)s/content_reject_form"
          category="workflow">Reject</action>
  <guard>
   <guard-permission>Ploneboard: Approve Comment</guard-permission>
  </guard>
 </transition>

 <transition transition_id="retract"
             title="Retract a internally published comment"
             new_state="retracted" trigger="USER"
             before_script="" after_script="">
  <action url="" category="workflow">Retract</action>
  <guard>
   <guard-permission>Ploneboard: Retract Comment</guard-permission>
  </guard>
 </transition>

 <transition transition_id="submit"
             title="Member requests publishing"
             new_state="pending" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_submit_form"
          category="workflow">Submit</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>


 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>

   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>

   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>

   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>

   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Ploneboard: Add Conversation</guard-permission>
   <guard-permission>Ploneboard: Approve Comment</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>

   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <script script_id="autopublish_script"
         type="External Method" filename=""
         module="Ploneboard.WorkflowScripts"
         function="autopublish_script"/>
 <script script_id="publish_script" type="External Method"
         filename="" module="Ploneboard.WorkflowScripts"
         function="publish_script"/>
 <script script_id="reject_script" type="External Method"
         filename="" module="Ploneboard.WorkflowScripts"
         function="reject_script"/>
</dc-workflow>
