<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="gruf">

<body>

    <div metal:fill-slot="main">

        <h1 tal:content="here/title_or_id" class="documentFirstHeading">
            Title or id
        </h1>

        <div class="documentDescription" tal:content="structure here/Description">
            description
        </div>

        
        <tal:block tal:replace="nothing">
          I WILL DO THAT LATER ! :-)
          <!-- Members overview -->
          <h2 i18n:translate="">Members overview</h2>
        </tal:block>


        <!-- GroupSpace contents -->
        <h2 i18n:translate="">Contents</h2>
        <tal:listing condition="folderContents"
                     tal:define="folderContents python:here.getFolderContents(suppressHiddenFiles=1);
                                 global getObjSize nocall:here/getObjSize;
                                 global toPortalTime nocall:here/toPortalTime;">

            <dl>
	        <metal:block tal:repeat="obj folderContents">

                <dt tal:define="url python:obj.absolute_url()+test(obj.isPrincipiaFolderish,'/','')">
                <a href="#" tal:attributes="href url"
                ><img src="#" alt="Title" tal:attributes="src string:${here/portal_url}/${obj/getIcon};alt here/title" /></a>

                <a href="#" tal:condition="python: obj.portal_type not in ['Link', 'Image']"
                            tal:attributes="href url"
                            tal:content="obj/title_or_id" />

                <a href="#" tal:condition="python: obj.portal_type == 'Image'"
                            tal:attributes="href python: url + '/view'"
                            tal:content="obj/title_or_id" />

                <a href="#" 
                   class="nomarker"
                   tal:condition="python: obj.portal_type == 'Link'"
                            tal:attributes="href obj/getRemoteUrl"
                            tal:content="obj/title_or_id" />

                <span class="discreet"
                      tal:condition="python: obj.portal_type == 'Event'">
    
                    &nbsp;
                    <span tal:replace="obj/location">Oslo</span>,
                    <span tal:replace="python: obj.start().ISO()">from date</span> -
                    <span tal:replace="python: obj.end().ISO()">to date</span>
                    
                </span>
                </dt>

                <dd>

                    <span tal:content="structure python:test(obj.Description(), obj.Description(), '&nbsp;')"> description </span>
                </dd>
		    </metal:block>
            </dl>

        </tal:listing>

        <p tal:condition="not: python:here.getFolderContents(suppressHiddenFiles=1)" i18n:translate="description_no_items_in_folder">
         There are currently no items in this group space.
        </p>

    </div>

</body>
</html>
