<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ploneboard">
      
<head>
   <metal:javascript fill-slot="javascript_head_slot">
     <script type="text/javascript"
              tal:attributes="src string:${portal_url}/moderation.js">
      </script>
   </metal:javascript>
    <metal:css fill-slot="css_slot">
        <style type="text/css" media="all"
               tal:content="string: @import url($portal_url/ploneboard.css);"></style>
        <style type="text/css" media="all">
            iframe.kupu-editor-iframe { height: 200px !important; }
        </style>
    </metal:css>
</head>

<body>

    <div metal:fill-slot="main">

        <h1 class="documentFirstHeading">
        <img src="" tal:replace="structure here/ploneboard_conversation_icon.gif" />
        <span tal:replace="here/Title">Conversation title</span>
        </h1>

        <metal:header use-macro="here/board_header/macros/header">Board header</metal:header>

        <div class="documentDescription"
             tal:content="here/Description"> 
        description
        </div>

        <div class="boardConversation"
             metal:define-macro="view_comments"
             tal:define="comments here/getComments">

            <div class="boardComment visualIEFloatFix" tal:repeat="comment comments">

            <metal:comment metal:use-macro="here/comment_view/macros/comment" />

            </div>
        </div>

	<a id="last"></a>
        <metal:block define-macro="quickreply">
          <fieldset>
            <legend i18n:translate="label_quickreply">Quick reply</legend> 
            <form tal:attributes="action string:${here/absolute_url}/add_comment_form"
                  tal:condition="python:checkPermission('Ploneboard: Add Comment', here) and checkPermission('Add portal content', here)">

              <div metal:use-macro="here/add_comment_form/macros/comment_body_text" tal:omit-tag="" /> 

              <input type="hidden" name="form.submitted" value="1" />
              <div class="formControls">
                  <input class="context"
                         name="form.button.Post" 
                         i18n:attributes="value post_reply"
                         type="submit" value="Post reply" />
              </div>
            </form>

            <div style="font-weight: bold; text-align: center;"
              tal:condition="python: not checkPermission('Ploneboard: Add Comment', here)"
              i18n:translate="conversation_locked">
                  This conversation is locked.
            </div>
          </fieldset>

        </metal:block>
        <metal:footer use-macro="here/board_footer/macros/footer">Board footer</metal:footer>

    </div>

</body>
</html>
