<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ploneboard">
      
<body>
  
  <tal:block replace="nothing">
  
    Disabled until this is made to work again
  
    <metal:javascript fill-slot="javascript_head_slot">
      <script type="text/javascript"
              tal:attributes="src string:${portal_url}/moderation.js">
       </script>
    </metal:javascript>
  </tal:block>

  <metal:css fill-slot="css_slot">
    <style type="text/css" media="all"
           tal:content="string: @import url($portal_url/ploneboard.css);"></style>
  </metal:css>

  <div metal:fill-slot="main"
       tal:define="view context/@@singlecomment_view">

    <div metal:use-macro="here/document_actions/macros/document_actions">
      Document actions (print, sendto etc)
    </div>

    <h2 tal:content="here/Title">Conversation title</h2>

    <metal:header use-macro="here/board_header/macros/header">
      Board header
    </metal:header>

    <div class="documentdescription" tal:content="here/Description"> 
      description
    </div>

    <div class="boardComment visualIEFloatFix"
         tal:define="comment python:view/comment">
         
      <metal:comment metal:define-macro="comment"
                     tal:define="creator comment/Creator;
                                 creatorinfo python: mtool.getMemberInfo(creator);
                                 creation_date comment/creation_date;
                                 pss modules/Products/PythonScripts/standard">

        <a tal:attributes="name comment/getId"></a>
        <div class="boardCommentDetails" id=""
             tal:attributes="id comment/getId">
          <ul class="contentActions boardCommentHeaderActions">
            <li>
	      <dl class="actionMenu">
                <dt class="actionMenuHeader">
                  <a title="Actions for the current content item">
                    Actions
                  </a>
                </dt>
                <dd class="actionMenuContent">
                  <ul>
                    <li tal:condition="comment/canEdit">
                      <a class="visualIconPadding actionicon-plone-extedit" 
                         title="Edit this comment"
                         tal:attributes="href string:${comment/absolute_url}/edit"
                         i18n:attributes="title">
                        Edit
                      </a>
                    </li>
                    <li tal:condition="comment/canDelete">
                      <a class="visualIconPadding actionicon-object_buttons-delete" 
                         title="Delete this comment"
                         tal:define="alert_msg python:here.translate('alert_really_delete', default='Do you really want to delete this comment?')"
                         tal:attributes="href string:${comment/absolute_url}/delete_view;
                                         onclick string: confirmDelete = confirm('${alert_msg}');; event.returnValue = confirmDelete;; return confirmDelete;;"
                         i18n:attributes="title">
                         Delete
                      </a>
                    </li>
                  </ul>
                </dd>
              </dl>
            </li>
            <li>
              <dl class="actionMenu">
                <dt class="actionMenuHeader">
		  <a href="content_status_history"
                     title="Change the state of this item"
                     i18n:attributes="title title_change_state_of_item"
                     tal:attributes="href string:${comment/absolute_url}/content_status_history">
                    <span i18n:translate="label_state">State:</span>
                    <span tal:content="comment/reviewStateTitle" i18n:translate="">
                      Workflow state
                    </span>
                  </a>
                </dt>
                <dd class="actionMenuContent">
                  <ul>
                    <tal:block repeat="transition comment/workflowActions">
                      <li>
                        <a href="#"
                           i18n:translate=""
                           tal:content="transition/title"
                           i18n:attributes="title"
			   tal:attributes="href string:${comment/absolute_url}/content_status_modify?workflow_action=${transition/id};
                                           title transition/title">
                          File Menu Item 1
                        </a>
                      </li>
                    </tal:block>
                  </ul>
                </dd>
              </dl>
            </li>
          </ul>

          <h3 tal:content="comment/Title">Post title</h3>
          <img src="" 
               tal:attributes="src string:${portal_url}/ploneboard_comment_icon.gif"/>
          <span i18n:translate="posted_by" tal:omit-tag="">Posted by</span>
          <span tal:replace="python:creatorinfo and creatorinfo['fullname'] or creator">author</span> 
          <span i18n:translate="text_at" tal:omit-tag="">at</span>
          <span tal:replace="python:here.toPloneboardTime(creation_date)">Thursday 13:21</span>
        </div>
    
        <div class="boardCommentBody">
          <div class="portrait">
            <tal:block define="portrait python:here.portal_membership.getPersonalPortrait(creator);"> 
              <a href="" title="View profile"
                tal:attributes="href string:${portal_url}/author/${creator}"
                i18n:attributes="title">
                <img class="portraitPhoto"
                     src="defaultUser.gif" 
                     alt="" 
                     border="0" 
                     width="75" 
                     height="100" 
                     tal:attributes="src portrait/absolute_url" />
              </a>
              <a tal:attributes="href string:${portal_url}/author/${creator}"
                 tal:content="python:creatorinfo and creatorinfo['fullname'] or creator">member id</a>
            </tal:block>
          </div>
          
          <div class="boardCommentContent" 
               tal:content="structure comment/getText">
               Comment text.
          </div>
        </div>


        <div class="visualClear"></div>

        <div class="boardCommentActions">
          <form tal:condition="python:checkPermission('Ploneboard: Add Comment', here)"
                tal:attributes="action string:${comment/absolute_url}/add_comment_form#${comment/getId}">
            <input class="standalone"
                   type="submit" 
                   value="Reply" 
                   i18n:attributes="value"
                   />
          </form>

          <form tal:condition="python:isAnon and not checkPermission('Ploneboard: Add Comment', here)"
                tal:attributes="action python:'%s/login_form?came_from=%s' %
                                              (here.portal_url(),
                                              pss.url_quote(request['URL']))">
            <input class="standalone" 
                   type="submit" 
                   value="Log in to add comments"
                   i18n:attributes="value"
                   />
          </form>
        </div>

        <fieldset tal:define="attachments comment/getAttachments"
                  tal:condition="attachments"
                  style="text-align: left;">
          <legend i18n:translate="legend_attachments">Attachments</legend>
          <ul class="visualNoMarker">
            <li tal:repeat="attachment attachments">
            <a tal:attributes="href attachment/absolute_url">
              <span tal:define="pt attachment/portal_type;
                                size python:here.getObjSize(attachment)"
                    tal:attributes="class python:'contenttype-'+normalizeString(pt)">
                <span class="visualIconPadding"
                      tal:content="attachment/title_or_id">
                  Attachment title
                </span>
                <span tal:condition="size" tal:omit-tag="">
                  (<span tal:replace="size">257 kB</span>)
                </span>
              </span>
            </a>
            </li>
          </ul>
        </fieldset>
      </metal:comment>
    </div>
  </div>
</body>
</html>
